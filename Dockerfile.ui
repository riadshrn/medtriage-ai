# RedFlag-AI - UI Frontend (Streamlit)
# Dockerfile pour le déploiement de l'interface utilisateur

FROM python:3.11-slim

LABEL maintainer="RedFlag-AI Team"
LABEL description="Interface Streamlit pour le triage des urgences"
LABEL version="2.0.0"

# Variables d'environnement
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# Configuration Streamlit
ENV STREAMLIT_SERVER_PORT=8501
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0
ENV STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# URL de l'API Backend (à configurer au déploiement)
ENV API_URL=http://localhost:8000

# Répertoire de travail
WORKDIR /app

# Installation des dépendances système
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 1. Récupération de uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

COPY requirements/requirements-ui.txt .

# 2. Installation Intelligente avec Cache Mount
# --mount=type=cache : Crée un volume persistant pour le cache uv
# target=/root/.cache/uv : L'emplacement par défaut du cache uv dans le conteneur
RUN --mount=type=cache,target=/root/.cache/uv \
    uv pip install \
    --system \
    --compile-bytecode \
    -r requirements-ui.txt

# Copie du code source de l'interface et des dépendances
COPY src/interface/ ./src/interface/
COPY src/models/ ./src/models/
COPY src/agents/ ./src/agents/
COPY src/ml/ ./src/ml/
COPY src/llm/ ./src/llm/
COPY src/data/ ./src/data/
COPY src/__init__.py ./src/

# Création des répertoires de données
RUN mkdir -p data/raw data/vector_store models/trained

# Exposition du port Streamlit
EXPOSE 8501

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Commande par défaut
CMD ["streamlit", "run", "src/interface/app.py"]
