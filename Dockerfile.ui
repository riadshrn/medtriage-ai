FROM python:3.11-slim

WORKDIR /app

# Installation des dépendances
COPY requirements/requirements-ui.txt .
RUN pip install --no-cache-dir -r requirements-ui.txt

# On ne copie pas le code ici car on utilisera les VOLUMES pour le dév
# Mais on prépare le port et la commande par défaut
EXPOSE 8501

CMD ["streamlit", "run", "src/interface/app.py", "--server.port=8501", "--server.address=0.0.0.0"]